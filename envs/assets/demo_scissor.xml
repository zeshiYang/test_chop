<?xml version="1.0" encoding="utf-8"?>
<mujoco model="scissor">
	<compiler angle="radian" coordinate="local" inertiafromgeom="true" meshdir="stls/"/>
	<option integrator="RK4" timestep="0.0001"/>
	<size nstack="10000" nconmax="150"/>

	<!-- default classes -->
	<default>
		<default class="scissor">
			<mesh scale="0.035 0.035 0.035"/>
			<!-- Need to change the joint pos value according with the scale -->
			<!-- The joint pos with scale x is x*(0 -0.099609 0.762755) -->
			<joint pos="0 -0.003486315 0.026696425" range="0 2.5132741228718" armature="0.001" damping="0.001" limited="true" type="hinge"/>
			<geom type="mesh" rgba=".8 .6 .4 1"/>
			<default class="scissor_contact">
				<geom type="mesh" mass="0" friction="1 0.005 0.0001" rgba="1 1 1 0"/>
			</default>
		</default>

		<default class="Adroit">
			<geom friction="1 0.005 0.001" condim="3" margin="0.000" contype="1" conaffinity="1"/>
			<joint limited="true" damping="0.05" armature=".001" margin="0.01" frictionloss="0.001"/>
			<tendon limited="true"/>
			<site size="0.005" rgba=".4 .9 .4 0"/>
			<default class="D_Touch">
				<site type="box" size="0.009 0.004 0.013" pos="0 -.004 .018" rgba=".8 .8 .8 0" group="4"/>
			</default>
			<default class="DC_Hand">
				<geom contype="1" conaffinity="0" material="self" group="2"/>
			</default>
		</default>

		<default class="humanoid">
			<geom type="capsule" material="self" group="2"/>
			<default class="stiff_medium">
				<joint stiffness="10" damping="2"/>
			</default>
			<default class="sensor_site">
				<site type="sphere" size="0.01" group="4" rgba="1 0 0 0"/>
			</default>
		</default>

	</default>
	
	<!-- assets -->
	<asset>
		<include file="scissor_assets.xml"/>
		<material name="self" rgba=".7 .5 .3 1"/>
	</asset>

	<visual>
		<scale forcewidth="0.01" contactwidth="0.003"/>
	</visual>

	<!-- contact pairs -->
	<contact>
		<include file="contacts/hand_contacts.xml"/>
		<include file="contacts/hand_scissor_contacts.xml"/>
	</contact>

	<!-- tendons -->
	<tendon>
		<include file="hand_tendon.xml"/>
	</tendon>
	
	<worldbody>
		<light diffuse="1 1 1" dir="-0 1.3 -1.3" directional="true" exponent="1" pos="0 0 1.3" specular=".1 .1 .1" castshadow="false"/>
		<include file="body/scissor.xml"/>
		<include file="body/arm.xml"/>
		<geom name="stick" type="capsule" fromto="-0.1 -0.025 0.15 0.1 -0.025 0.15" size="0.005" condim="4"/>
	</worldbody>
</mujoco>